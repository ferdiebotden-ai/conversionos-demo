{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bespoke Target Brand Data",
  "description": "Structured brand data extracted from a target contractor's website for bespoke demo generation",
  "type": "object",
  "required": ["company_name", "slug", "location", "phone", "services"],
  "properties": {
    "company_name": {
      "type": "string",
      "description": "Full legal company name"
    },
    "slug": {
      "type": "string",
      "description": "URL-safe identifier (lowercase, hyphens)",
      "pattern": "^[a-z0-9-]+$"
    },
    "tagline": {
      "type": "string",
      "description": "Company tagline or slogan"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": { "type": "string" },
        "province": { "type": "string" },
        "address": { "type": "string" },
        "postal_code": { "type": "string" }
      },
      "required": ["city", "province"]
    },
    "principals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name", "role"]
      }
    },
    "phone": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "website": { "type": "string", "format": "uri" },
    "hours": { "type": "string" },
    "booking_url": { "type": "string", "format": "uri" },
    "founded_year": { "type": "integer" },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "certifications": {
      "type": "array",
      "items": { "type": "string" }
    },
    "testimonials": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "author": { "type": "string" },
          "quote": { "type": "string", "description": "EXACT quote, never paraphrased" },
          "project_type": { "type": "string" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 }
        },
        "required": ["author", "quote"]
      }
    },
    "service_areas": {
      "type": "array",
      "items": { "type": "string" }
    },
    "socials": {
      "type": "object",
      "properties": {
        "facebook": { "type": "string" },
        "instagram": { "type": "string" },
        "google_business": { "type": "string" },
        "houzz": { "type": "string" }
      }
    },
    "brand_colors": {
      "type": "object",
      "properties": {
        "primary_hex": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "secondary_hex": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "primary_oklch": { "type": "string", "description": "OKLCH value for CSS, e.g. 0.45 0.18 250" }
      }
    },
    "hero_headline": { "type": "string" },
    "hero_description": { "type": "string" },
    "about_copy": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paragraphs of about/what-we-do copy"
    },
    "mission_statement": { "type": "string" },
    "process_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["title", "description"]
      }
    },
    "values": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["title", "description"]
      }
    },
    "unique_sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" }
        }
      },
      "description": "Any unique content sections specific to this target"
    }
  }
}
